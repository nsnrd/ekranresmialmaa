{
  "manifest_version": 2,
  "name": "Ekran görüntüsü alma aracı",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],  
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
